{
  "name": "build-matrix-action",
  "version": "1.0.0",
  "description": "GitHub Action to build matrix for changed projects",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "index.js",
      "!node_modules/**"
    ],
    "coverageReporters": ["text", "lcov", "html"]
  }
}
